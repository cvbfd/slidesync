#sidebar
  %div
    - if current_user == @room.user
      =form_tag @room, method: 'delete' do
        =hidden_field_tag :room_id, @room.id
        =submit_tag 'ルームを削除する', confirm: 'OK?'
  %ul#usersList
    =content_tag :li, class: 'owner', id: "owner_#{@room.user.id}" do
      =image_tag(@room.user.icon_url)
      =@room.user.nickname
    - @room.guests.each do |guest|
      =content_tag :li, class: 'guest', id: "guest_#{guest.id}" do
        =image_tag(guest.icon_url)
        =guest.nickname

#main
  = content_tag :div, id: 'stage', data: {room: @room} do
    #wrapSlide
      #slide{data: {id: @room.slide_id, doc: @room.slide_url}}
    %dl
      %dt title
      %dd=@room.title
      %dt description
      %dd=@room.description
  
  - if current_user == @room.user
    %iframe#controllerIframe{frameborder: 0}
    #controller
      %ul
        %li#first
          %a{href: '#'} &lt;&lt;
        %li#prev
          %a{href: '#'} &lt;
        %li#goto
          %input#gotoBox{type: 'text', size: '2', value: 1}
        %li#next
          %a{href: '#'} &gt;
        %li#last
          %a{href: '#'} &gt;&gt;
